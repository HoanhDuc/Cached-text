{
  "manifest_version": 3,
  "name": "Text Cache Editor",
  "version": "1.1",
  "description": "Edit and cache text on any website without breaking layout.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text Cache Editor"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
